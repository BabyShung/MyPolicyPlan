<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/input_email_for_password_text"
        android:textSize="20dp"
        android:id="@+id/inputEmail" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/userEmailInput"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/inputEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_get_password_button_text"
        android:id="@+id/goGetPswButton"
        android:onClick="goGetPsw"
        android:layout_toEndOf="@+id/userEmailInput"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/userEmailInput"
        android:layout_alignLeft="@+id/userEmailInput"
        android:layout_alignStart="@+id/userEmailInput" />
</RelativeLayout>